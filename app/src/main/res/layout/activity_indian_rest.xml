<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/indianrest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".IndianRestActivity">

    <Button
        android:id="@+id/aromas"
        android:layout_width="141dp"
        android:layout_height="79dp"


        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/aromas"
        android:padding="20dp"

        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/karavali"
        android:layout_width="159dp"
        android:layout_height="90dp"


        android:layout_marginStart="16dp"
        android:layout_marginTop="172dp"
        android:background="@drawable/karavali"
        android:padding="20dp"

        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/aromas" />

    <Button
        android:id="@+id/spicymint"
        android:layout_width="159dp"
        android:layout_height="90dp"


        android:layout_marginStart="196dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/spicy"
        android:padding="20dp"

        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/nirvana"
        android:layout_width="159dp"
        android:layout_height="90dp"


        android:layout_marginStart="220dp"
        android:layout_marginTop="204dp"
        android:background="@drawable/nirvana"
        android:padding="20dp"

        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/spicymint" />


    <Button
        android:id="@+id/maharaja"
        android:layout_width="159dp"
        android:layout_height="90dp"


        android:layout_marginStart="75dp"
        android:layout_marginBottom="75dp"

        android:background="@drawable/maharaja"
        android:padding="20dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>